<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#4D00A3E1">
    <!-- Subtle ripple effect matching the gradient theme -->

    <item>
        <shape android:shape="rectangle">
            <!-- Background color adjusted for a professional look -->
            <solid android:color="#1E3C72"/>

            <!-- Rounded corners for a modern UI design -->
            <corners android:radius="20dp"/>

            <!-- Border stroke matching the theme -->
            <stroke android:width="2dp" android:color="#00A3E1"/>

            <!-- Padding for better touch feedback -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>
</ripple>
